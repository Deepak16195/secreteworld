<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/arrow_left_point" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arrow_right_point" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/p1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fontblack"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/avenirltstd_roman"
            android:text="kim Gomaz" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/avenirltstd_light"
        android:text="SAGO OR SABUDANA KHICHDI"
        android:textColor="@color/customBlue" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:fontFamily="@font/avenirltstd_black"
            android:text="39 MAY 2016"
            android:textColor="@color/fontblack" />

        <RatingBar
            android:id="@+id/ratingbar_eat"
            style="?attr/ratingBarStyleSmall"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_address"
            android:numStars="5"
            android:rating="5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/kilo_miters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/kilo_miters_units"
            android:fontFamily="@font/avenirltstd_black"
            android:text="30"
            android:textColor="#515151"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/kilo_miters_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ratingbar_eat"
            android:fontFamily="@font/avenirltstd_black"
            android:text=" Km"
            android:textColor="#515151"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/kilo_miters"
            app:srcCompat="@drawable/ic_map_grey" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:textColor="@color/fontblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirltstd_light"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English." />

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/direction" />

        <ImageView
            android:id="@+id/img_review"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/ic_review" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/audio" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_lines"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/dotted"
        android:layerType="software" />
    <TextView
        android:text="SHARE"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/fontblack"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/avenirltstd_roman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_fb" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_google" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_linkind" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_twt" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_whatsapp" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_eat"
        android:paddingHorizontal="60dp"
        android:fontFamily="@font/charcoal"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/cutomGreen"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:text="WHERE TO EAT"
        android:layout_width="wrap_content"
        android:layout_height="38dp" />
</LinearLayout>