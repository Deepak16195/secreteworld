<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_message_user"
        android:elevation="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/img_message_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_message_user_name"
        android:text="MARCO ALESSANDO"
        android:textColor="#515151"
        android:fontFamily="@font/avenirltstd_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_message_content"
        android:fontFamily="@font/avenirltstd_roman"
        android:text="it is long establish fact"
        android:layout_below="@+id/txt_message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirltstd_black"

            android:text="19 Oct"
            android:textAllCaps="true"
            />
    </RelativeLayout>
</RelativeLayout>