<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#186972" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <include layout="@layout/common_assistance"/>
            <ScrollView
                android:id="@+id/sv_main"
                android:fillViewport="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_main_addcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#F6412C"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="1"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="TITLE"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/rl_title_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_title"
                            android:layout_margin="10dp">

                            <EditText
                                android:id="@+id/et_addcontent_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_border"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:hint="assigning meaningfull title"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/et_addcontent_title"
                                android:text="MAX 80 CHARECTERS" />
                        </RelativeLayout>

                    </RelativeLayout>
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#EC1660"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="2"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="CATEGORY"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_category_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_category"
                            android:layout_margin="10dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/et_addcontent_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_border"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:hint="assigning meaningfull title"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/et_addcontent_category"
                                android:text="MAX 80 CHARECTERS" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#264BB8"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="3"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="BRIF DESCRIPTION"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_description_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_description"
                            android:layout_margin="10dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/et_addcontent_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_border"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:hint="BRIF DESCRIPTION"
                                android:lines="4"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/et_addcontent_description"
                                android:text="MAX 500 CHARECTERS" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_extdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#1573F8"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="4"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="DATE &amp; TIME"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_extdesc_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_extdesc"
                            android:layout_margin="10dp"
                           android:visibility="gone">

                            <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                app:picker_textSize="14dp"
                                app:picker_curved="true"
                                app:picker_cyclic="true"
                                app:picker_visibleItemCount="7"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#1573F8"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="5"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="TAG"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_tag_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_tag"
                            android:layout_margin="10dp"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/et_addcontent_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_border"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:hint="Tag Your Content"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/et_addcontent_tag"
                                android:text="MAX 80 CHARECTERS" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_pic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#89C541"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="6"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="PICTURE"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rl_pic_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_pic"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/square_border"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_camera" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TAP TO ADD PHOTO"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/square_border"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingVertical="10dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_video" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TAP TO ADD Video"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColor"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_addcontent_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#CADE1D"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center"
                                android:text="7"
                                android:textAlignment="gravity"
                                android:textColor="@color/white"
                                android:textSize="34sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:gravity="center_vertical"
                                android:text="LOCATION"
                                android:textAlignment="gravity"
                                android:textColor="#505050"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_location_expand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_addcontent_location"
                            android:layout_margin="10dp"
                            android:visibility="gone">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/square_border"
                                android:fontFamily="@font/avenirltstd_medium"
                                android:hint="Type Location"
                                android:padding="10dp" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>