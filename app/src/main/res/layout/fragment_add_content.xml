<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#186972" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/avenirltstd_medium"
                        android:text="MY CONTENT"
                        android:textColor="#505050"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_bell_add_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/avenirltstd_roman"
                            android:text="ASSISTANCE"
                            android:textColor="#F6412C"
                            android:textSize="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#F6412C"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="1"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="TITLE"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_title_expand"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_title"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_title"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_title"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#EC1660"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="2"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="CATEGORY"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_category_expand"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_category"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_category"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_category"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#264BB8"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="3"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="BRIF DESCRIPTION"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_description_expand"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_description"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_description"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_description"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_extdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#1573F8"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="4"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="EXTENDED DESCRIPTION"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_title_extdesc"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_extdesc"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_extdesc"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_extdesc"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#1573F8"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="5"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="TAG"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_tag_expand"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_tag"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_tag"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_tag"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#89C541"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="6"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="PICTURE"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_pic_expand"
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_pic"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_addcontent_pic"
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/et_addcontent_pic"
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_addcontent_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#CADE1D"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center"
                            android:text="7"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:gravity="center_vertical"
                            android:text="LOCATION"
                            android:textAlignment="gravity"
                            android:textColor="#505050"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_below="@+id/ll_addcontent_location"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:background="@drawable/square_border"
                            android:fontFamily="@font/avenirltstd_medium"
                            android:padding="10dp"
                            android:hint="assigning meaningfull title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_alignParentRight="true"
                            android:text="MAX 80 CHARECTERS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>