<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_assistance" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/avenirltstd_light"
            android:hint="TITLE"
            android:padding="5dp"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/avenirltstd_light"
            android:hint="DISCRIPTION"
            android:padding="5dp"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp">

        <Spinner
            android:id="@+id/spin_category"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp">

        <Spinner
            android:id="@+id/spin_per_unit"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:elevation="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirltstd_light"
                android:backgroundTint="@color/white"
                android:hint="PRICE"
                android:padding="5dp"
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:elevation="8dp">

            <Spinner
                android:id="@+id/spin_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="CANCEL"
            android:backgroundTint="#646464"
            android:textSize="12sp"
            android:fontFamily="@font/avenirltstd_light"
            android:textColor="@color/white"
            android:letterSpacing="0.1"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:text="SAVE"
            android:textSize="12sp"
            android:layout_weight="1"
            android:fontFamily="@font/avenirltstd_light"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:backgroundTint="#006691"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <Button
        android:textColor="@color/white"
        android:fontFamily="@font/charcoal"
        android:letterSpacing="0.1"
        android:backgroundTint="@color/cutomGreen"
        android:text="ENTER DATE AND TIME"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>