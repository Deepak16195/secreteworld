<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp" />

    <ImageView
        android:id="@+id/iv_gradient"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_gradient" />

    <!--<android.support.design.widget.TabLayout-->
    <!--android:id="@+id/tabs"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="60dp"-->
    <!--android:background="@android:color/transparent"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--app:tabGravity="fill"-->
    <!--app:tabIndicatorHeight="0dp"-->
    <!--app:tabMode="fixed"-->
    <!--app:tabTextAppearance="@style/CustomTextStyle" />-->
    <LinearLayout
        android:paddingBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/nav_zero"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_icon_zero"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/nav_text_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/avenirltstd_medium"
                android:text="HOME"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_one"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_icon_one"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_explore" />

            <TextView
                android:id="@+id/nav_text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/avenirltstd_medium"
                android:text="EXPLORE"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_plus"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_more" />

            <TextView
                android:id="@+id/txt_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_plus"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/avenirltstd_medium"
                android:text="MORE"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_three"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/nav_icon_three"
                app:srcCompat="@drawable/ic_request"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/nav_text_three"
                android:text="REQUEST"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/avenirltstd_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nav_four"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/nav_icon_four"
                app:srcCompat="@drawable/ic_mydiary"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/nav_text_four"
                android:layout_marginTop="3dp"
                android:text="DIARY"
                android:textSize="10sp"
                android:fontFamily="@font/avenirltstd_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>