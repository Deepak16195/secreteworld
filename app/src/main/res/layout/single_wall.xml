<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile_wall"
                android:background="@drawable/ic_user"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_profile_username_wall"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_profile_wall"
                android:fontFamily="@font/avenirltstd_heavy"
                android:text="ANTONIO KIM"
                android:textAllCaps="true"
                android:textColor="#505050"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tv_profile_username_wall"
                android:layout_toRightOf="@+id/img_profile_wall"
                android:text="DD/MM/YY, 14.42"
                android:textSize="10sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_video"
            android:text="Hello this is message on your Wall"
            android:fontFamily="@font/avenirltstd_medium"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/launch_banner"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_height="130dp" />
        <!--<com.google.android.youtube.player.YouTubePlayerView-->
            <!--android:id="@+id/youtube_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        <RelativeLayout
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_num"
                android:fontFamily="@font/avenirltstd_roman"
                android:text="2"
                android:textColor="#505050"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_msg_box"
                android:layout_toRightOf="@+id/tv_comment_num"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_message_box"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </RelativeLayout>
        <View
            android:background="#A3A3A3"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_comment"
                android:layout_weight="1"
                android:fontFamily="@font/avenirltstd_medium"
                android:padding="5dp"
                android:textSize="12dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/square_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_comment"
                android:background="#00749A"
                android:text="COMMENT"
                android:layout_marginLeft="2dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenirltstd_roman"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>