<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <!--<ImageView-->
        <!--android:id="@+id/img_navigation_cross"-->
        <!--app:srcCompat="@drawable/ic_cross_profile_stuff"-->
        <!--android:layout_width="22dp"-->
        <!--android:layout_height="22dp"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginRight="10dp" />-->

    <RelativeLayout
        android:id="@+id/rl_profile_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_prof"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_profile_man" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_prof"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/profile_edit_details_round_bg"
            android:fontFamily="@font/avenirltstd_book"
            android:letterSpacing="0.1"
            android:paddingHorizontal="15dp"
            android:paddingVertical="3dp"
            android:text="VIEW PROFILE"
            android:textColor="@color/white"
            android:textSize="9sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/avenirltstd_book"
        android:letterSpacing="0.1"
        android:text="ANTONIO KIM"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp" />
</LinearLayout>
