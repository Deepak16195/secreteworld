<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_expert_user"
        android:src="@drawable/ic_user"
        android:layout_width="50dp"
        android:layout_height="50dp" />\
    <LinearLayout
        android:id="@+id/ll_expert_user_name_date"
        android:layout_toRightOf="@+id/img_expert_user"
        android:orientation="horizontal"
        android:layout_marginVertical="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_expert_user"
            android:layout_weight="0.5"
            android:fontFamily="@font/avenirltstd_black"
            android:text="MARCO ALESSANDO"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_expert_date"
            android:text="20 OCT"
            android:fontFamily="@font/avenirltstd_black"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_expert_content"
        android:layout_below="@+id/ll_expert_user_name_date"
        android:fontFamily="@font/avenirltstd_black"
        android:text="its is a long establish fact that a reader"
        android:layout_toRightOf="@+id/img_expert_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="#00749A"
        android:layout_marginTop="6sp"
        android:text="AWAITING"
        android:layout_below="@+id/txt_expert_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/avenirltstd_roman"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

</RelativeLayout>