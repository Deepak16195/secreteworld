<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/launch_banner" />

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_profile_request_title"
                android:fontFamily="@font/avenirltstd_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD TRAVLLER" />

            <TextView
                android:id="@+id/tc_date"
                android:fontFamily="@font/avenirltstd_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD/MM/YY"
                android:layout_below="@+id/txt_profile_request_title" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_profile_request_content"
                android:fontFamily="@font/avenirltstd_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tc_date"
                android:text="It is long established fact that a reader will be distraced by the readable content of a" />

            <View
                android:layout_below="@+id/txt_profile_request_content"
                android:id="@+id/v_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="@color/grayColor" />

            <Button
                android:id="@+id/btn_profile_request"
                android:layout_width="wrap_content"
                android:layout_below="@+id/v_line"
                android:fontFamily="@font/avenirltstd_roman"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="#00749A"
                android:text="REPLY"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>